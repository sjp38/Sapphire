<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/member_item_nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="홍길동"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/member_item_allocRatioTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/underTitleItemLeftMargin"
                android:text="Rate : 50%(중간 참가)"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/member_item_stateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/underTitleItemLeftMargin"
                android:text="할당 공지됨"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <QuickContactBadge
            android:id="@+id/member_item_quickContactBadge"
            style="?android:attr/quickContactBadgeStyleWindowMedium"
            android:layout_gravity="center"
            android:layout_margin="@dimen/quickContactMargin"
            android:src="@drawable/ic_contact_picture_holo_dark" />
    </LinearLayout>

    <View
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>